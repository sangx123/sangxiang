<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#8D8D8D"
    >
    
     <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_alignParentBottom="true"
  android:id="@+id/llbottom"
   >
     <include
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 layout="@layout/main_bottom"
	 android:layout_gravity="center_vertical"
	 
	 />
  </LinearLayout>
    <!-- 时间设置界面 -->
        <RelativeLayout
	      android:id="@+id/relation_dssz_setting"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:layout_alignParentTop="true"
		  android:layout_above="@id/llbottom"
		  android:visibility="gone"
		 >
		    <include
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    layout="@layout/time_setting_main"
		    />
		 </RelativeLayout>
      <!-- 更多的界面信息 -->
        <RelativeLayout
	      android:id="@+id/relation_more"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:layout_alignParentTop="true"
		  android:layout_above="@id/llbottom"
		  android:visibility="gone"
		 >
		 <RelativeLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/main_title_bg"
			android:layout_alignParentTop="true"
			android:id="@+id/relation_more"
			>
			<TextView
				android:gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"
				android:textStyle="bold"
				android:textSize="20dp"
				android:text="更多"
				/>
		</RelativeLayout>
		     <ListView
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:id="@+id/lvmoredetail"
		     android:cacheColorHint="#00000000"
		     android:divider="@drawable/line"
		     android:layout_below="@id/relation_more"
		     android:layout_margin="5dp"
		     android:background="@drawable/more_detail_bg"
		     />
		 </RelativeLayout>
  <!-- 非急勿扰和请忽打扰界面 -->
        <RelativeLayout
	      android:id="@+id/relation_qhdr_orfjwr"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:layout_alignParentTop="true"
		  android:layout_above="@id/llbottom"
		  android:visibility="gone"
		 >
		    <include
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    layout="@layout/fjwr_layout"
		    />
		 </RelativeLayout>
  
  
    <!-- 主页的布局文件 -->
	   <RelativeLayout
	      android:id="@+id/relation_main"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:layout_alignParentTop="true"
		  android:layout_above="@id/llbottom"
		 >
	      <!-- 头部文件XML -->
		     <include
		      android:id="@+id/lltoplayout"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  layout="@layout/second_main_title"
			  android:layout_gravity="center_vertical"
			  android:layout_alignParentTop="true"
			 />
			    <winway.mdr.chinaunicom.custom.controls.CustomListView
		   android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
		   android:id="@+id/lvhfzc"
		   style="@style/listview1"
		   android:cacheColorHint="#00000000"
		   android:dividerHeight="0dp"
		   android:layout_alignParentBottom="true"
		   android:layout_margin="5dp"
		   />
		       <LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_below="@id/lltoplayout"
			android:layout_above="@id/lvhfzc"
			android:orientation="vertical"
			android:id="@+id/llmainshowmdr"
		    >
			   <include
			   android:layout_width="fill_parent"
			   android:layout_height="wrap_content"
			   layout="@layout/second_main_index"
			   />
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
