<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="300dp"
  android:id="@+id/rlthiscurrentstatus"
  >
	  <LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_alignParentTop="true"
	  android:id="@+id/lltopsettinginfo"
	  >
	    <include
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     layout="@layout/thiscurrent_title"
	    />
	</LinearLayout>
	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_below="@id/lltopsettinginfo"
	android:background="@drawable/fjwr_main_bg"
	>
	
	<ScrollView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_margin="5dp"
	>
			<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:background="@drawable/temp_bg"
			android:orientation="vertical"
			>
			     <RelativeLayout
			   android:layout_width="fill_parent"
			   android:layout_height="wrap_content"
			   android:padding="10dp"
			   
			   >
			       <TextView
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:textColor="#000000"
			       android:textStyle="bold"
			       android:text="状态"
			       android:layout_alignParentLeft="true"
			       android:layout_centerVertical="true"
			       android:textSize="18dp"
			       />
			      <TextView
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:layout_alignParentRight="true"
			      android:layout_centerVertical="true"
			      android:text="非急勿扰"
			       android:textColor="#CC2B30"
			       android:textStyle="bold"
			       android:id="@+id/tvthiscurrent_policy"
			      />
			  </RelativeLayout>
			  <View
			  android:layout_width="fill_parent"
			  android:layout_height="2dp"
			  android:background="@drawable/line"
			  />
			      
			  
			     <RelativeLayout
			   android:layout_width="fill_parent"
			   android:layout_height="wrap_content"
			   android:padding="10dp"
			   >
			       <TextView
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:textColor="#000000"
			       android:textStyle="bold"
			       android:text="情景"
			       android:layout_alignParentLeft="true"
			       android:layout_centerVertical="true"
			       android:textSize="18dp"
			       />
			       
			      <TextView
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:layout_alignParentRight="true"
			      android:layout_centerVertical="true"
			        android:text="休息"
			       android:textColor="#CC2B30"
			       android:textStyle="bold"
			       android:id="@+id/thiscurrent_sence"
			      />
			      <ImageView
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:layout_toLeftOf="@id/thiscurrent_sence"
			      android:src="@drawable/xiuxi"
			      android:layout_marginRight="5dp"
			      android:id="@+id/thiscurrent_sence_icon"
			      />
			  </RelativeLayout>
			  <View
			  android:layout_width="fill_parent"
			  android:layout_height="2dp"
			  android:background="@drawable/line"
			  />
			        <RelativeLayout
			   android:layout_width="fill_parent"
			   android:layout_height="wrap_content"
			   android:padding="10dp"
			   >
			       <TextView
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:textColor="#000000"
			       android:textStyle="bold"
			       android:text="起始时间"
			       android:layout_alignParentLeft="true"
			       android:layout_centerVertical="true"
			       android:textSize="18dp"
			       />
			      <TextView
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:layout_alignParentRight="true"
			      android:layout_centerVertical="true"
			       android:text="2011-11-12 22:30"
			       android:textColor="#CC2B30"
			       android:textStyle="bold"
			       android:id="@+id/thiscurrent_begintime"
			      />
			  </RelativeLayout>
			  <View
			  android:layout_width="fill_parent"
			  android:layout_height="2dp"
			  android:background="@drawable/line"
			  />
			       <RelativeLayout
			   android:layout_width="fill_parent"
			   android:layout_height="wrap_content"
			  android:padding="10dp"
			   >
			       <TextView
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:textColor="#000000"
			       android:textStyle="bold"
			       android:text="结束时间"
			       android:layout_alignParentLeft="true"
			       android:layout_centerVertical="true"
			       android:textSize="18dp"
			       />
			      <TextView
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:layout_alignParentRight="true"
			      android:layout_centerVertical="true"
			       android:text="2011-11-12 22:30"
			       android:textColor="#CC2B30"
			       android:textStyle="bold"
			       android:id="@+id/thiscurrent_endtime"
			      />
			  </RelativeLayout>
			 
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</RelativeLayout>
