<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  >
  
	  <LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:background="@drawable/main_title_bg"
	  android:layout_alignParentTop="true"
	  android:id="@+id/lllogintop"
	  >
	     <TextView
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:text="用户登录"
	     android:layout_gravity="center"
	     android:textSize="20dp"
	     android:gravity="center"
	     android:textStyle="bold"
	     />
</LinearLayout>
  <LinearLayout
      android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_below="@id/lllogintop"
	  android:background="@drawable/login_bg"
  >
	    <LinearLayout
	      android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:orientation="vertical"
		  android:layout_margin="5dp"
		  android:background="@drawable/temp_bg"
	    >
	     <LinearLayout
	      android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
	    >
	      <TextView
	       android:layout_width="80dp"
		  android:layout_height="wrap_content"
		  android:text="手机号:"
		  android:layout_margin="3dp"
		  android:layout_gravity="center"
		  android:gravity="center"
		  android:textColor="#000000"
		  android:textStyle="bold"
		  android:textSize="18dp"
	      />
	     <EditText
	          android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:layout_gravity="center"
			  android:layout_margin="3dp"
			  android:gravity="left"
			  android:numeric="integer"
			  android:maxLength="11"
			  android:id="@+id/etuser_phone_number"
	      />
	    </LinearLayout>
	     <View
	     android:layout_width="fill_parent"
	     android:layout_height="1dp"
	     android:background="@drawable/line"
	     />
	   <LinearLayout
	      android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
	    >
	      <TextView
	       android:layout_width="80dp"
		  android:layout_height="wrap_content"
		  android:text="  密 码:"
		  android:layout_margin="3dp"
		  android:layout_gravity="center"
		  android:gravity="center"
		  android:textColor="#000000"
		  android:textStyle="bold"
		  android:textSize="18dp"
	
	      />
	     <EditText
	          android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:layout_gravity="center"
			  android:gravity="left"
			  android:layout_margin="3dp"
			  android:password="true"
			  android:singleLine="true"
			   android:id="@+id/etuser_phone_password"
			   android:numeric="integer"
	      />
	    </LinearLayout>
	      <LinearLayout
	      android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
	    >
	       <CheckBox
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="记住密码"
	       android:textColor="#000000"
		  android:textStyle="bold"
		  android:textSize="18dp"
		  android:layout_weight="1"
		   style="@style/checkbox"
		   android:checked="true"
		   android:id="@+id/cbremenduserdata"
	       />
	       <CheckBox
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="自动登录"
	       android:textColor="#000000"
		  android:textStyle="bold"
		  android:textSize="18dp"
		    android:layout_weight="1"
		    style="@style/checkbox"
		    android:id="@+id/cbautologin"
	       />
	    </LinearLayout>
	     <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       >
         
         <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
          android:text="登录"
         android:id="@+id/btnlogin"
         />
         <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:id="@+id/btnlogiccancel"
         android:text="取消"
         
         />
       </LinearLayout>
        <LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:gravity="right"
	  >
	  <TextView
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text=" 开通   "
			  android:id="@+id/tvkaitong"
			  android:textStyle="bold"
			  android:textSize="20dp"
			  android:layout_marginRight="3dp"
			  android:textColor="#7830FA"
	  />
	        <TextView
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="忘记密码?"
			  android:id="@+id/tvforgetpwd"
			  android:textStyle="bold"
			  android:textSize="20dp"
			  android:layout_marginRight="3dp"
			  android:textColor="#7830FA"
	  />
	  
	  
	  </LinearLayout>
	  </LinearLayout>
	
  </LinearLayout>
    
</RelativeLayout>
