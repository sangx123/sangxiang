<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

  <!-- App Global Styles -->
  <style name="app_textview_style" parent="android:Widget.TextView">
    <item name="android:textColor">@color/app_text_color_inverted</item>
  </style>

  <style name="app_edittext_style" parent="android:Widget.EditText">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/app_text_on_highlight_color</item>
    <item name="android:textColorHint">@color/app_hint_text_on_highlight_color</item>
  </style>

  <style name="actionbar_style" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:textColorPrimary">@color/app_text_color</item>
    <item name="android:displayOptions">showHome|useLogo</item>
  </style>

  <style name="actionbar_title_text" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
    <!-- Required for pre-Lollipop. -->
    <item name="overlapAnchor">false</item>

    <!-- Required for Lollipop. -->
    <item name="android:overlapAnchor" tools:targetApi="21">false</item>
  </style>

  <!-- OLD STYLES -->

  <style name="PreferencesTheme" parent="android:Theme">
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowBackground">@color/gray_2</item>
    <item name="android:windowTitleSize">35dip</item>
  </style>

  <style name="Theme.Transparent" parent="android:Theme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>


  <style name="CustomAlertDialogStyle" parent="@android:style/Theme.Dialog">
    <item name="android:background">@color/white</item>
  </style>

  <style name="CustomDebugDialogStyle" parent="@android:style/Theme.Dialog">
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="CustomTranslucentDialogStyle" parent="@android:style/Theme.Dialog">

    <item name="android:background">@android:color/transparent</item>
    <item name="android:textColor">@color/textColor</item>
  </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="buttonStyle">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">20sp</item>
  </style>


  <!-- ActionBar styles -->
  <style name="MyActionBarMenuItem" parent="@android:style/Widget.ActionButton">
    <!-- tab indicator -->
    <item name="android:background">@drawable/actionbar_menu_item_button
    </item>
  </style>

  <style name="CustomNoActionBarTheme" parent="@android:style/Theme.Holo.Light.NoActionBar"></style>

  <style name="ProgressiveDialogTheme" parent="@android:style/Theme.Dialog">
    <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle
    </item>
    <item name="android:textColorPrimary">#000000</item>
  </style>

  <style name="CheckBoxMvr">
    <item name="android:background">#ffffff</item>
    <item name="android:button">@null</item>
    <item name="android:drawableBottom">@drawable/checkbox_state_mvr</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:textColor">#080808</item>
  </style>

  <style name="TextViewMvrScheduleHeader" parent="@style/Base.TextAppearance.AppCompat.Medium">

  </style>

  <style name="transparent_activity" parent="android:Theme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>


  <style name="FAB">
    <item name="android:layout_width">@dimen/floating_action_button_size</item>
    <item name="android:layout_height">@dimen/floating_action_button_size</item>
  </style>

  <style name="FAB.Accent">
    <item name="android:background">@drawable/fab_accent_normal</item>
  </style>

  <style name="Navigation_ItemColor">
    <item name="android:textColor">#727272</item>
      <item name="android:textSize">12sp</item>
      <item name="android:fontFamily">Roboto-Regular</item>
    </style>

  <style name="Logout_ItemColor">
    <item name="android:textColor">#2399ca</item>
    <item name="android:textSize">18sp</item>

      <item name="android:fontFamily">Roboto-Medium</item>
  </style>

    <style name="Menu_ItemColor">
        <item name="android:textColor">#36b1e5</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">Roboto-Medium</item>
    </style>

  <style name="Menu_currentPlan_ItemColor">
    <item name="android:textColor">#1a4c62</item>
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">Roboto-Italic</item>
    <item name="android:textStyle">italic</item>
  </style>


  <style name="PauseDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
    <item name="android:textColor">@color/text_blue</item>
    <item name="android:textColorPrimary">@color/text_blue</item>



  </style>

  <style name="CompactSpinner_color" parent="Theme.AppCompat.Light">

    <item name="android:color">#ff0000</item>


  </style>


  <style name="SwitchCompact_color" parent="Theme.AppCompat.Light">

    <item name="colorControlActivated">@color/text_blue</item>

  </style>

  <style name="Theme.AppCompat.FullScreen" parent="@style/Theme.AppCompat.Light">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
  </style>
  
  <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
      <item name="android:textColor">@color/blue</item>
  </style>

</resources>