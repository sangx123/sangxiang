<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- the theme applied to the application or activity -->

  <style name="Theme.VTech" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/app_action_bar_color</item>
    <item name="colorPrimaryDark">@color/app_theme_color</item>

    <item name="android:textViewStyle">@style/app_textview_style</item>
    <item name="android:editTextStyle">@style/app_edittext_style</item>
    <item name="android:fastScrollThumbDrawable">@drawable/brand_fastscroll_thumb_holo</item>
    <item name="android:actionMenuTextColor">@color/white</item>
    <item name="android:spinnerStyle">@android:style/Widget.Holo.Spinner</item>
    <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="actionModeStyle">@style/Material.Widget.ActionMode</item>
  </style>

  <style name="Material.Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
    <item name="android:background">@color/app_action_bar_color</item>
    <item name="background">@color/app_action_bar_color</item>
  </style>

  <style name="Theme.Hubble" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/app_action_bar_color</item>
    <item name="colorPrimaryDark">@color/app_theme_color</item>

    <item name="android:textViewStyle">@style/app_textview_style</item>
    <item name="android:editTextStyle">@style/app_edittext_style</item>
    <item name="android:fastScrollThumbDrawable">@drawable/brand_fastscroll_thumb_holo</item>
    <item name="android:spinnerStyle">@android:style/Widget.Holo.Spinner</item>
    <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="actionModeStyle">@style/Material.Widget.ActionMode</item>
  </style>


  <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@android:color/white</item>
  </style>

</resources>