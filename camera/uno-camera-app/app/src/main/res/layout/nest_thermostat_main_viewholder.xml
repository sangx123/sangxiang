<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/parent_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nest_dashboard_main_height"
                android:background="@drawable/nest_background_cooling">


	<LinearLayout
		android:id="@+id/main_container"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_marginEnd="10dp"
		android:layout_marginStart="18dp"
		android:orientation="vertical"
		android:padding="5dp"
		android:weightSum="1">

		<TextView
			android:id="@+id/product_name"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_weight="0.3"
			android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
			android:scrollHorizontally="true"
			android:gravity="left"
			android:singleLine="true"
			android:text="Product Name"
			android:textColor="@color/white"
			android:textSize="15sp"
			android:textStyle="bold"
			android:typeface="sans"/>


		<ImageView
			android:id="@+id/product_logo"
			android:layout_width="88dp"
			android:layout_height="85dp"
			android:layout_gravity="center"
			android:layout_weight="0.3"
			android:gravity="center_vertical"
			android:src="@drawable/nest_home"/>

		<TextView
			android:id="@+id/mode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_weight="0.3"
			android:drawablePadding="8dp"
			android:gravity="center"
			android:textColor="@color/white"
			android:textSize="16sp"/>

	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_toRightOf="@+id/main_container"
		android:padding="5dp">

		<TextView
			android:id="@+id/status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/online"
			android:drawablePadding="5dp"
			android:paddingTop="6dp"
			android:text="Online"
			android:textColor="@color/white"/>

		<RelativeLayout
			android:id="@+id/rl_humidity"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/status">
			<ImageView
				android:id="@+id/home"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="20dp"
				android:src="@drawable/home"/>
			<LinearLayout android:layout_width="120dp"
			              android:layout_height="wrap_content"
			              android:layout_below="@+id/home"
			              android:layout_marginTop="4dp"
			              android:orientation="horizontal">


				<TextView
					android:id="@+id/room_temparature"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_below="@+id/home"
					android:layout_toEndOf="@+id/functional"
					android:gravity="left"
					android:paddingTop="6dp"

					android:text="79F"
					android:layout_weight="1"
   					android:textColor="@color/white"/>

                 <View android:layout_width="1dp"
                       android:layout_height="20dp"
                       android:background="@color/white"
                       android:paddingTop="8dp"
                       android:paddingBottom="8dp"
                       android:layout_gravity="center_vertical"
                 ></View>
				<TextView
					android:id="@+id/humidity"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:drawableLeft="@drawable/humidity_bubble"
					android:drawablePadding="4dp"
					android:gravity="left"
					android:paddingTop="6dp"
					android:layout_weight="1"
					android:paddingLeft="12dp"
					android:text="56%"
					android:textColor="@color/white"/>
			</LinearLayout>


		</RelativeLayout>

		<TextView
			android:id="@+id/functional"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/rl_humidity"
			android:paddingLeft="2dp"
			android:text="Heating..."
			android:textColor="@color/white"
			android:textSize="11sp"/>


		<TextView
			android:id="@+id/target_temparature"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/functional"
			android:paddingTop="1dp"
			android:text="60"
			android:textColor="@color/white"
			android:textSize="50sp"
			android:textStyle="bold"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:layout_marginEnd="14dp"
			android:src="@drawable/nest_settings"
			android:visibility="gone"/>
		<TextView
			android:id="@+id/target_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_alignBaseline="@+id/target_temparature"
			android:layout_alignBottom="@+id/target_temparature"
			android:layout_toEndOf="@+id/target_temparature"
			android:text="in 20 mins..."
			android:textColor="@color/white"
			android:textSize="11sp"/>


	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_alignParentBottom="true"
		android:background="@color/white"/>


</RelativeLayout>