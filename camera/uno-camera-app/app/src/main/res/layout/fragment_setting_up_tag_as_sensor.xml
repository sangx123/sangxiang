<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="#ffffff">


<RelativeLayout
    android:id="@+id/tag_activating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">


  <TextView
      android:id="@+id/wait"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginTop="20dp"
      android:text="@string/tag_wait"
      android:fontFamily="Roboto-Medium"
      android:textColor="#36b1e5"
      android:layout_centerInParent="true"

      android:textSize="14sp"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/wait"
      android:layout_marginTop="5dp"
      android:text="@string/activating_tag"
      android:fontFamily="Roboto-Regular"
      android:textColor="#9b9b9b"
      android:layout_centerInParent="true"
      android:textSize="14sp"
      />

  <WebView
      android:id="@+id/setting_sensor_image"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_gravity="center_horizontal"
      android:layout_above="@+id/wait"
      android:background="#ffffff"

      android:layout_centerInParent="true"/>
</RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/tag_activated_layout"
      android:visibility="gone">

    <TextView
        android:id="@+id/tag_congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/congrats"
        android:fontFamily="Roboto-Medium"
        android:textColor="#36b1e5"

        android:textSize="21sp"/>

    <TextView
        android:id="@+id/tag_activated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="@string/tag_activated"
        android:layout_below="@+id/tag_congratulations"
        android:fontFamily="Roboto-Regular"
        android:textColor="#36b1e5"
        android:textSize="18sp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/coin_img"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/tag_congratulations"/>

    <Button
        android:id="@+id/tag_takemein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_background"
        android:layout_centerInParent="true"
        android:text="@string/takemein"
        android:textAllCaps="false"
        android:fontFamily="Roboto-Regular"
        android:textColor="#36b1e5"
        android:textSize="18sp"/>

  </RelativeLayout>



</RelativeLayout>