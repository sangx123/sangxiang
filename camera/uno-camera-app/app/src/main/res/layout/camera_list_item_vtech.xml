<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/camera_list_item_frame_holder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/camera_list_item_half_padding">

  <com.hubble.ui.CustomImageView
      android:id="@+id/list_row_camera_setting_imageCamera"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#aabbcc"
      android:scaleType="centerCrop"
      android:src="@drawable/default_wide_cam"/>

  <RelativeLayout
      android:id="@+id/relativeLayout"
      android:layout_width="match_parent"
      android:layout_height="@dimen/camera_bottom_line"
      android:layout_alignBottom="@+id/list_row_camera_setting_imageCamera">

    <LinearLayout
        android:id="@+id/camera_list_item_camera_details_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/device_list_item_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/textViewCameraName"
          style="@style/TextAppearance.AppCompat.Medium"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:layout_weight="1"
          android:gravity="bottom"
          android:maxLines="1"
          android:scrollHorizontally="true"
          android:singleLine="true"
          android:textColor="@color/device_list_item_text"/>


      <ImageButton
          android:id="@+id/list_row_camera_setting_camSettingBtn"
          android:layout_width="62dp"
          android:layout_height="62dp"
          android:layout_margin="5dp"
          android:background="@android:color/transparent"
          android:contentDescription="@string/device_settings"
          android:scaleType="centerCrop"
          android:src="@drawable/gear_button"/>
    </LinearLayout>

  </RelativeLayout>

  <com.nxcomm.blinkhd.ui.customview.CameraStatusView
      android:id="@+id/list_row_camera_ImageView_CameraStatus"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/relativeLayout"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:padding="1dp"/>
</RelativeLayout>