<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/viewfinder_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transperent_color">

        <ImageView
            android:id="@+id/close_capture"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:padding="2dp"
            android:src="@drawable/close"/>


        <TextView
            android:id="@+id/record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="Roboto-Regular"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/record_img"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/record_img"
            android:layout_centerHorizontal="true"
            android:fontFamily="Roboto-Regular"
            android:text="@string/viewfinder_record"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/capture_img"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:src="@drawable/capture" />

        <TextView
            android:id="@+id/capture_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/capture_img"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="Roboto-Regular"
            android:text="@string/viewfinder_capture"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/gallery_img"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:src="@drawable/gallery" />

        <TextView
            android:id="@+id/gallery_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gallery_img"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="47dp"
            android:fontFamily="Roboto-Regular"
            android:text="@string/viewfinder_gallery"
            android:textColor="@color/white"
            android:textSize="12sp" />

</RelativeLayout>


