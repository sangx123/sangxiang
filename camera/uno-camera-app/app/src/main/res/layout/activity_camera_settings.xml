<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:background="@color/color_blue"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/closeCameraSettings"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:src="@drawable/layout_close"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:text="@string/camera_settings"
			android:textColor="@color/white"
			android:fontFamily="Roboto-Regular"
			android:textSize="18sp"/>
        <TextView
            android:id="@+id/cameraname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:textColor="@color/white"
            android:fontFamily="Roboto-Regular"
            android:textSize="12sp"/>
	</LinearLayout>

	<ScrollView
		android:id="@+id/scrollview"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		              android:orientation="vertical">
			<LinearLayout
				android:orientation="vertical"
				android:id="@+id/motionlayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="65dp"
					android:background="@color/white"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_weight="1"
						android:layout_marginLeft="20dp"
						android:text="@string/motion_detection"
						android:textColor="@color/text_gray"
						android:fontFamily="Roboto-Medium"
						android:textSize="16sp"/>
					<android.support.v7.widget.SwitchCompat
						android:id="@+id/switch_motionDetection"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:theme="@style/SwitchCompact_color"
						android:layout_marginRight="10dp"
						/>
				</LinearLayout>
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@color/drawer_list_divider"
				/>
                <LinearLayout
                    android:id="@+id/baby_md_types"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@color/color_light_grey"
                    android:orientation="vertical">
                    <RadioGroup

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">
                        <RadioButton
                            android:id="@+id/motion_none"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@string/none"
                            android:visibility="gone"
                            android:textColor="@color/color_blue"/>
                        <RadioButton
                            android:id="@+id/motion_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:checked="true"
                            android:text="@string/motion_detection"
                            android:textColor="@color/color_blue"/>

                        <RadioButton
                            android:id="@+id/motion_sleep_analytics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@string/sleep_analytics"
                            android:textColor="@color/color_blue"
                           />
                        <RadioButton

                            android:id="@+id/motion_expression"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_margin="5dp"
                            android:text="@string/experession_detection"
                            android:textColor="@color/color_blue"
                            />
                    </RadioGroup>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/drawer_list_divider"
                        />
                </LinearLayout>
				<LinearLayout
					android:id="@+id/ll_motionSensitivity"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:visibility="gone">
				<LinearLayout
					android:id="@+id/ll_motionSensitivity1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/color_light_grey"
					android:orientation="vertical"
					android:visibility="visible">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="18sp"
						android:layout_marginTop="20dp"
						android:text="@string/motion_sensitivity"
						android:fontFamily="Roboto-Medium"
						android:textColor="@color/text_gray"
						android:textSize="16sp"/>


					<RelativeLayout
						android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="20dp"
				        android:layout_marginRight="20dp"
				        android:layout_marginTop="10dp">

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="3dp"
							android:layout_centerInParent="true"
					        android:layout_marginLeft="5dp"
					        android:layout_marginRight="15dp"
					        android:background="#dadada"/>

						<RadioGroup
							android:id="@+id/radio_group"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="horizontal">
							<RadioButton
								android:id="@+id/radio_motion1"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:button="@drawable/radio_toggle_btn"/>

							<RadioButton
								android:id="@+id/radio_motion2"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:button="@drawable/radio_toggle_btn"/>

							<RadioButton
								android:id="@+id/radio_motion3"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:button="@drawable/radio_toggle_btn"/>

							<RadioButton
								android:id="@+id/radio_motion4"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:button="@drawable/radio_toggle_btn"/>

							<RadioButton
								android:id="@+id/radio_motion5"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:button="@drawable/radio_toggle_btn"
								android:paddingRight="10dp"/>
						</RadioGroup>
				    </RelativeLayout>

				    <LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="30dp"
						android:orientation="horizontal"
						android:layout_marginTop="5dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:fontFamily="Roboto-Regular"
							android:textSize="12sp"
							android:text="@string/low"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center_horizontal"
							android:fontFamily="Roboto-Regular"
							android:textSize="12sp"
							android:text="@string/medium"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="right"
							android:fontFamily="Roboto-Regular"
							android:textSize="12sp"
							android:text="@string/high"/>
					</LinearLayout>
					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_marginLeft="18dp"
						android:layout_marginRight="18dp"
						android:layout_marginTop="20dp"
						android:background="@color/drawer_list_divider"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/mvrlayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/color_light_grey"
					android:orientation="vertical">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="18dp"
						android:layout_marginTop="18dp"
						android:text="@string/motion_video_recording"
						android:fontFamily="Roboto-Medium"
						android:textColor="@color/text_gray"
						android:textSize="16sp"/>
					<RadioGroup
						android:id="@+id/rg_cameraSettings"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:padding="15dp">
						<RadioButton
							android:id="@+id/radio_vr_cloud"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingRight="10dp"
							android:text="@string/cloud"
							android:fontFamily="Roboto-Regular"
							android:textSize="16sp"
							android:textColor="@color/color_blue"/>
						<RadioButton
							android:id="@+id/radio_vr_sdcard"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingRight="10dp"
							android:text="@string/sd_card"
							android:fontFamily="Roboto-Regular"
							android:textSize="16sp"
							android:textColor="@color/color_blue"/>
						<RadioButton
							android:id="@+id/radio_vr_off"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingRight="10dp"
							android:text="@string/off"
							android:fontFamily="Roboto-Regular"
							android:textSize="16sp"
							android:textColor="@color/color_blue"/>
					</RadioGroup>
					<LinearLayout
						android:id="@+id/sdcardlayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@color/color_light_grey"
						android:visibility="gone"
						android:orientation="vertical">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="18dp"
							android:layout_marginTop="18dp"
							android:text="@string/when_sdcard_is_full"
							android:textColor="@color/text_gray"
							android:fontFamily="Roboto-Regular"

							android:textSize="16sp"/>
						<RadioGroup
							android:id="@+id/sdcad_rg_cameraSettings"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							android:padding="15dp">
							<RadioButton
								android:id="@+id/radio_remove_clip"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:paddingRight="10dp"
								android:fontFamily="Roboto-Regular"
								android:text="@string/remove_sdcard_clip"
								android:textColor="@color/color_blue"/>
							<RadioButton
								android:id="@+id/radio_switch_cloud"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:paddingRight="10dp"
								android:fontFamily="Roboto-Regular"
								android:text="@string/switch_to_cloud"
								android:textColor="@color/color_blue"/>
						</RadioGroup>
					</LinearLayout>
					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_marginLeft="18dp"
						android:layout_marginRight="18dp"
						android:background="@color/drawer_list_divider"/>
					<RelativeLayout
						android:id="@+id/scheduler_layout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@color/color_light_grey"
						android:visibility="gone"
						android:padding="15dp">

						<TextView
							android:id="@+id/scheduler_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="16sp"
							android:fontFamily="Roboto-Regular"
							android:textColor="@color/text_gray"
							android:text="@string/scheduler_title"/>

						<android.support.v7.widget.SwitchCompat
							android:id="@+id/scheduler_switch"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentRight="true"
							android:layout_alignTop="@id/scheduler_title"
							app:theme="@style/SwitchCompact_color"
							android:layout_marginRight="10dp"/>

						<TextView
							android:id="@+id/scheduler_current"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_below="@id/scheduler_title"
							android:layout_marginTop="12dp"
							android:textSize="12sp"
							android:visibility="gone"
							android:fontFamily="Roboto-Regular"
							android:textColor="@color/color_blue"
						/>
						<TextView
							android:id="@+id/scheduler_next"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_below="@id/scheduler_current"
							android:layout_marginTop="6dp"
							android:textSize="12sp"
							android:visibility="gone"
							android:fontFamily="Roboto-Regular"
							android:textColor="@color/color_blue"
						/>

					</RelativeLayout>
				</LinearLayout>
					</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				android:id="@+id/soundlayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="65dp"
					android:background="@color/white"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_weight="1"
						android:layout_marginLeft="20dp"
						android:text="@string/sound_detection"
						android:fontFamily="Roboto-Medium"
						android:textColor="@color/text_gray"
						android:textSize="16sp"/>
					<android.support.v7.widget.SwitchCompat
						android:id="@+id/switch_soundDetection"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:theme="@style/SwitchCompact_color"
						android:layout_marginRight="10dp"
						/>
				</LinearLayout>
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@color/drawer_list_divider"/>
				<LinearLayout
					android:id="@+id/ll_soundSensitivity"
					android:layout_width="match_parent"
					android:layout_height="130dp"
					android:background="@color/color_light_grey"
					android:orientation="vertical"
					android:visibility="gone">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="18sp"
						android:layout_marginTop="24dp"
						android:text="@string/sound_sensitivity"
						android:fontFamily="Roboto-Medium"
						android:textColor="@color/text_gray"
						android:textSize="16sp"/>

					<RelativeLayout android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="20dp"
				        android:layout_marginRight="20dp"
				        android:layout_marginTop="20dp">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="3dp"
							android:layout_centerInParent="true"
					        android:layout_marginLeft="5dp"
					        android:layout_marginRight="15dp"
					        android:background="#dadada"/>

						<RadioGroup
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="horizontal">
							<RadioButton
								android:id="@+id/radio_sound0"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:button="@drawable/radio_toggle_btn"/>

							<RadioButton
								android:id="@+id/radio_sound1"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:button="@drawable/radio_toggle_btn"
								android:visibility="invisible"/>

							<RadioButton
								android:id="@+id/radio_sound2"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:button="@drawable/radio_toggle_btn"/>

							<RadioButton
								android:id="@+id/radio_sound3"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:visibility="invisible"
								android:button="@drawable/radio_toggle_btn"/>

							<RadioButton
								android:id="@+id/radio_sound4"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:button="@drawable/radio_toggle_btn"
							    android:paddingRight="10dp"/>
						</RadioGroup>
					</RelativeLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_below="@+id/ll_radiogroup"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:layout_marginTop="5dp"
						android:orientation="horizontal">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:fontFamily="Roboto-Regular"
							android:textSize="12sp"
							android:text="@string/low"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center_horizontal"
							android:fontFamily="Roboto-Regular"
							android:textSize="12sp"
							android:text="@string/medium"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="right"
							android:fontFamily="Roboto-Regular"
							android:textSize="12sp"
							android:text="@string/high"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				android:id="@+id/temperaturelayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="65dp"
					android:background="@color/white"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_weight="1"
						android:layout_marginLeft="20dp"
						android:text="@string/temperature_detection"
						android:textColor="@color/text_gray"
						android:fontFamily="Roboto-Medium"
						android:textSize="16sp"/>
					<android.support.v7.widget.SwitchCompat
						android:id="@+id/switch_tempDetection"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:theme="@style/SwitchCompact_color"
						android:layout_marginRight="10dp"
						/>
				</LinearLayout>
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@color/drawer_list_divider"/>

				<LinearLayout
					android:id="@+id/ll_temparatureDetection"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/color_light_grey"
					android:orientation="vertical"
					android:visibility="gone">

					<RadioGroup
						android:id="@+id/rg_tempDetection"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
						android:padding="15dp"
						android:visibility="gone">
						<RadioButton
							android:id="@+id/rbcel"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingRight="10dp"
							android:text="\u00B0C"
							android:clickable="false"
							android:checked="true"
							android:textColor="@color/color_blue"/>
						<RadioButton
							android:id="@+id/rbfheit"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingRight="10dp"
							android:clickable="false"
							android:text="\u00B0F"
							android:visibility="gone"
							android:textColor="@color/color_blue"/>
					</RadioGroup>
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/temp_value_in_c"
	android:layout_margin="5dp"
	android:textColor="@color/hint_text"
	android:fontFamily="Roboto-Regular"
	android:textSize="12sp"/>

					<com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
						android:id="@+id/rangeSeekbar"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="20dp"
						android:layout_margin="5dp"
						android:background="#d8d8d8"
						/>
					<Button
						android:id="@+id/tempupdate"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp"
                        android:padding="5dp"
						android:visibility="gone"
						android:layout_gravity="center"
						android:textAllCaps="false"
						android:text="@string/apply_temp"
						android:textColor="@color/white"
						android:fontFamily="Roboto-Regular"
						android:textSize="14sp"
                        android:background="@color/color_blue"
						/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				android:id="@+id/lens_correct_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:visibility="visible">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="65dp"
					android:background="@color/white"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_weight="1"
						android:layout_marginLeft="20dp"
						android:text="@string/lens_correction"
						android:textColor="@color/text_gray"
						android:fontFamily="Roboto-Medium"
						android:textSize="16sp"/>
					<android.support.v7.widget.SwitchCompat
						android:id="@+id/lens_correction_switch"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:theme="@style/SwitchCompact_color"
						android:layout_marginRight="10dp"
						/>
				</LinearLayout>
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@color/drawer_list_divider"
					/>
			</LinearLayout>

			<!--<LinearLayout
				android:orientation="vertical"
				android:id="@+id/motion_recording_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:visibility="gone">
				<LinearLayout
