<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="160dp"
              android:layout_height="wrap_content"
              android:background="@drawable/video_browser_item_border"
              android:paddingBottom="4dp"
              android:orientation="vertical">

  <RelativeLayout
      android:layout_width="160dp"
      android:layout_height="90dp">

    <ImageView
        android:id="@+id/snapshotImageView"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:src="@drawable/no_snap"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/playImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/camera_action_play"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/cameraNameTextView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:text="Camera Name"/>

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cameraNameTextView"
        android:text="Today "
        />
  </RelativeLayout>


</LinearLayout>