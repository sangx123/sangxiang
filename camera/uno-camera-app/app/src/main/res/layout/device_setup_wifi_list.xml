<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/header_setup"
        layout="@layout/activity_toolbar" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:fontFamily="Roboto-Regular"
        android:textSize="18sp"
        android:textColor="@color/text_gray"
        android:layout_below="@+id/header_setup"
        android:text="@string/setup_camera_wifi_list"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"/>

    <ListView
        android:id="@+id/wifi_list"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="40dp"
        android:divider="@color/drawer_list_divider"
        android:dividerHeight="1dp"
        android:layout_below="@+id/header_title"
        android:layout_above="@+id/wifi_recommended_tv"/>

    <TextView
        android:id="@+id/wifi_recommended_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:fontFamily="Roboto-Regular"
        android:textSize="14sp"
        android:textColor="@color/color_dark_red"
        android:text="@string/wifi_recommended_message"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/search_ll"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"/>

    <LinearLayout
        android:id="@+id/search_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/detect_wifi_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/setup_device_detect_button"
            android:text="@string/setup_search_again"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="Roboto-Regular"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>

</RelativeLayout>
