<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:background="@color/color_blue"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/closeCameraDetails"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:src="@drawable/layout_close"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:text="@string/debug_camera_details"
			android:textColor="@color/white"
			android:textSize="18sp"/>
	</LinearLayout>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="20dp"
		android:layout_weight="1"
	>
		<LinearLayout android:layout_width="match_parent"
		              android:layout_height="match_parent"
		              android:orientation="vertical">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="75dp"
				android:gravity="center_vertical">
				<TextView
					android:id="@+id/cameraName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:text="@string/camera_name"
					android:textColor="@color/text_gray"
					android:textSize="14sp"/>

				<TextView
					android:id="@+id/cameraModelName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/cameraName"
					android:layout_marginTop="6dp"
					android:text="string/camera"
					android:textColor="@color/color_text_blue"
					android:textSize="16sp"/>
				<ImageView
					android:id="@+id/edit_cameraName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:layout_marginRight="20dp"
					android:src="@drawable/vector_drawable_edit"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/cameraModelName"
                    android:background="@color/drawer_list_divider"
                    />
			</RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/camera_snapshot"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"/>

                <RadioButton
                    android:id="@+id/rb_snap_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/camera_snap_auto"
                    android:textColor="#2399ca"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="16sp"
                    android:checked="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="4dp">
                <RadioButton
                    android:id="@+id/rb_snap_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/camera_snap_choose"
                    android:layout_weight=".8"
                    android:fontFamily="Roboto-Regular"
                    android:textColor="#9b9b9b"
                    android:textSize="16sp"/>
                    <ImageView
                        android:id="@+id/snap_choose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/snap_shot_disabled"
                        android:layout_weight=".2"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/drawer_list_divider"
                    />

            </LinearLayout>



            <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:gravity="center_vertical"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/setup_camera_id"
					android:textColor="@color/text_gray"
					android:textSize="14sp"/>
				<TextView
					android:id="@+id/cameraid"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="6dp"
					android:text="@string/setup_camera_id"
					android:textColor="@color/text_gray"
					android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/drawer_list_divider"
                    />
			</LinearLayout>


			<LinearLayout
				android:id="@+id/mac_address_layout"
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:gravity="center_vertical"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/mac_address"
					android:textColor="@color/text_gray"
					android:textSize="14sp"/>

				<TextView
					android:id="@+id/macAddress"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="6dp"
					android:text="@string/mac_address"
					android:textColor="@color/text_gray"
					android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/drawer_list_divider"
                    />
			</LinearLayout>



			<RelativeLayout
				android:id="@+id/firmwarelayout"
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:gravity="center_vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/firmware_version"
					android:layout_marginTop="4dp"
					android:textColor="@color/text_gray"
					android:textSize="14sp"
					android:id="@+id/firmware_ver_title"/>


				<TextView
					android:id="@+id/firmwareVersion"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="6dp"
					android:text="@string/firmware_version"
					android:layout_below="@+id/firmware_ver_title"
					android:textColor="@color/text_gray"
					android:textSize="16sp"/>

				<ImageView
					android:id="@+id/check_fw_iv"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:layout_marginRight="20dp"
					android:src="@drawable/check"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/firmwareVersion"
                    android:background="@color/drawer_list_divider"
                    />

			</RelativeLayout>



			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:id="@+id/mcu_version_layout"
				android:visibility="gone">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/mcu_version"
					android:textColor="@color/text_gray"
					android:textSize="14sp"/>

				<TextView
					android:id="@+id/mcu_version_tv"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="6dp"
					android:text="@string/mcu_version"
					android:textColor="@color/text_gray"
					android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/drawer_list_divider"
                    />

			</LinearLayout>



			<LinearLayout
				android:id="@+id/slavecheck"
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:gravity="center_vertical"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/slave_firmware"
					android:textColor="@color/text_gray"
					android:textSize="14sp"/>

				<TextView
					android:id="@+id/slaveFirmware"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="6dp"
					android:text="@string/failed_to_retrieve_camera_data"
					android:textColor="@color/text_gray"
					android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/drawer_list_divider"

                    />

			</LinearLayout>



			<LinearLayout
				android:id="@+id/curren_plan_layout"
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:gravity="center_vertical"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/current_plan"
					android:textColor="@color/text_gray"
					android:textSize="14sp"/>

				<TextView
					android:id="@+id/currentPlan"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="6dp"
					android:text="@string/current_plan"
					android:textColor="@color/text_gray"
					android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/drawer_list_divider"
                    />

			</LinearLayout>

            <LinearLayout
                android:id="@+id/timezonecheck"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timezone"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/currenttimezone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="@color/text_gray"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/drawer_list_divider"
                    />


            </LinearLayout>


			<LinearLayout
				android:id="@+id/selecttempformat"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="vertical"
                android:visibility="gone">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/temperature"
					android:textColor="@color/text_gray"
					android:textSize="14sp"/>
				<RadioGroup
					android:id="@+id/rg"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:padding="15dp"
				>
					<RadioButton
						android:id="@+id/rb_celsius"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingRight="10dp"
						android:text="C"
					/>
					<RadioButton
						android:id="@+id/rb_fh"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingRight="10dp"
						android:text="F"
					/>

				</RadioGroup>



			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
				android:background="@color/drawer_list_divider"
			/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="75dp"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:visibility="gone">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/time_format"
					android:textColor="@color/text_gray"
					android:textSize="14sp"/>

				<RadioGroup
					android:id="@+id/rg_timeformat"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:padding="15dp"
				>
					<RadioButton
						android:id="@+id/rb_12"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingRight="10dp"
						android:text="12hrs"
					/>
					<RadioButton
						android:id="@+id/rb_24"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingRight="10dp"
						android:text="24hrs"
					/>

				</RadioGroup>

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
                    android:layout_marginTop="5dp"
					android:background="@color/drawer_list_divider"
					/>


			</LinearLayout>

			<LinearLayout
				android:id="@+id/wifilayout"
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:gravity="center_vertical"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/wifi_signal_strength"
					android:textColor="@color/text_gray"
					android:textSize="14sp"/>

				<TextView
					android:id="@+id/wifiStrength"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="6dp"
					android:text="100%"
					android:textColor="@color/text_gray"
					android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/drawer_list_divider"
                    />
			</LinearLayout>


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:id="@+id/sdcard_format_layout"
				android:visibility="gone">
				<TextView
					android:id="@+id/sdcard_format_title_tv"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/sdcard_format_title"
					android:textColor="@color/text_gray"
					android:textSize="14sp"/>

				<TextView
					android:id="@+id/sdcard_format_desc_tv"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="6dp"
					android:text="@string/sdcard_format_desc"
					android:textColor="@color/text_gray"
					android:textSize="12sp"/>
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
                    android:layout_marginTop="5dp"
					android:background="@color/drawer_list_divider"
					/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/ota_option"
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:visibility="gone">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginRight="10dp"
					android:orientation="horizontal">
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/use_debug_ota"
						android:textColor="@color/text_gray"
						android:textSize="14sp"
						android:layout_weight="1"/>


					<android.support.v7.widget.SwitchCompat
						android:id="@+id/use_debug_switch"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						app:theme="@style/SwitchCompact_color"
						android:layout_marginRight="5dp"/>
				</LinearLayout>
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
                    android:layout_marginTop="5dp"
					android:background="@color/drawer_list_divider"
					/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/sendcameralog"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:gravity="center_vertical"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					
					android:text="@string/send_camera_log"
					android:textColor="@color/text_gray"
					android:textSize="14sp"/>



			</LinearLayout>


		</LinearLayout>
	</ScrollView>

	<TextView
		android:id="@+id/delete_all_events"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginBottom="10dp"
		android:text="@string/delete_all_events"
		android:textColor="@color/delete_events"
		android:textSize="16sp"/>


</LinearLayout>