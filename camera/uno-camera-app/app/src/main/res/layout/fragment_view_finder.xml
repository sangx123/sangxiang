<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/viewfinder_primary_bg">

    <include
        android:id="@+id/toolbar"
        layout="@layout/viewfinder_toolbar"
    />

    <RelativeLayout
        android:id="@+id/viewfinder_info"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/viewfinder_secondary_bg">

        <TextView
            android:id="@+id/temp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:fontFamily="Roboto-Light"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/humidity_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/temp_text"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/humidity_vf"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/humidity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/humidity_img"
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true"
            android:fontFamily="Roboto-Light"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="Roboto-Regular"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:textColor="@color/viewfinder_text_color"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/camera_switch_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="18dp"
                android:src="@drawable/in_privacy"
                android:layout_gravity="center_vertical"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/camera_on_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                app:theme="@style/SwitchCompact_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:src="@drawable/privacyoff"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/streaming_layout"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_below="@id/viewfinder_info">

        <RelativeLayout
            android:id="@+id/live_streaming_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <base.hubble.CustomVerticalScrollView
                android:id="@+id/vscroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <base.hubble.CustomHorizontalScrollView
                    android:id="@+id/hscroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.media.ffmpeg.android.FFMpegMovieViewAndroid
                            android:id="@+id/imageVideo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true" />

                    </LinearLayout>

                </base.hubble.CustomHorizontalScrollView>

            </base.hubble.CustomVerticalScrollView>


            <TextView
                android:id="@+id/live_status_text"
                android:layout_width="51dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/viewfinder_live_bg"
                android:text="@string/viewfinder_live"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/direction_image"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/preview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:tint="#D9535353"/>


            <ImageView
                android:id="@+id/progress_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="@drawable/settingup"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/progress_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progress_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="Roboto-Regular"
                    android:text="@string/setting_up_quick_view"/>

                <TextView
                    android:id="@+id/progress_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_text_blue"
                    android:fontFamily="Roboto-Bold"/>

                <TextView
                    android:id="@+id/progress_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/color_orange"
                    android:fontFamily="Roboto-Regular"
                    android:text="@string/viewfinder_progress_msg"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/error_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/error_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/alert_vf"/>

                <TextView
                    android:id="@+id/error_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="Roboto-Bold"
                    android:text="@string/viewfinder_error_connecting"
                    />

                <TextView
                    android:id="@+id/error_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="Roboto-Regular"
                    android:text="@string/viewfinder_retry_instruction1"/>

                <TextView
                    android:id="@+id/error_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="Roboto-Regular"
                    android:text="@string/viewfinder_retry_instruction2"/>

                <Button
                    android:id="@+id/retry_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="Roboto-Regular"
                    android:background="@drawable/viewfinder_button"
                    android:text="@string/viewfinder_retry"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/alert_layout"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#8C000000"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/vector_drawable_alert"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="11sp"
                    android:fontFamily="Roboto-Regular"
                    android:textColor="@color/white"
                    android:text="@string/viewfinder_alert" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/debug_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textFrameRate"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:background="@drawable/temp_bg"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/textResolution"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textFrameRate"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/temp_bg"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/textBitrate"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textResolution"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/temp_bg"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/textGlobalBitrate"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textBitrate"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/temp_bg"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:visibility="visible"/>

                <LinearLayout
                    android:id="@+id/layoutWifiSignal"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/textGlobalBitrate"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/temp_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/connection_type"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/setup_wifi_green"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/textWifiSignal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:visibility="gone"/>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/quick_setting_setup_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setting_up_quick_text_view"
                android:text="@string/setting_up_quick_view"
                android:textColor="@color/white"
                android:textSize="@dimen/quick_mode_settings_view_text_size"
                android:gravity="center"
                android:paddingTop="@dimen/quick_mode_setting_padding_top"/>

            <ImageView
                android:id="@+id/setting_up_anim_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/loading"
                android:gravity="center"
                android:layout_below="@+id/setting_up_quick_text_view"
                android:paddingTop="@dimen/quick_mode_setting_padding_top"
                android:paddingBottom="@dimen/quick_mode_setting_padding_top"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setting_up_summary_text_view"
                android:text="@string/setting_up_quick_summary"
                android:textSize="@dimen/quick_mode_settings_view_text_size"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_below="@+id/setting_up_anim_image">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/notification_off_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/viewfinder_notification_off_bg"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/switch_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">


                <LinearLayout
                    android:layout_width="121dp"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rectangle"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/in_privacy"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/notification_toggle"
                        android:layout_width="50dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        app:theme="@style/SwitchCompact_color"
                        android:checked="false"
                        android:layout_marginLeft="6dp"/>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dp" 
                        android:src="@drawable/not_in_privacy"/>

                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/switch_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="Roboto-Regular"
                android:text="@string/viewfinder_notification_off_text"/>


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewfinder_default_controls"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/control_button_grid"
        android:layout_below="@id/streaming_layout"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/hd_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hd_img"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:src="@drawable/hdoff" />

            <TextView
                android:id="@+id/hd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:fontFamily="Roboto-Light"
                android:text="@string/viewfinder_hd_off"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mute_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mute_img"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:src="@drawable/soundon" />

            <TextView
                android:id="@+id/mute_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:fontFamily="Roboto-Light"
                android:text="@string/viewfinder_sound_on"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

    </RelativeLayout>

    <GridView
        android:id="@+id/control_button_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewfinder_separator"
        android:background="@color/viewfinder_primary_bg"
        android:horizontalSpacing="2dp"
        android:visibility="visible"
        />

    <View
        android:id="@+id/viewfinder_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/event_list_layout"
        android:background="@color/viewfinder_primary_bg"
        android:layout_alignTop="@+id/event_list_layout"/>

    <RelativeLayout
        android:id="@+id/event_list_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_dark_grey">

        <ImageView
            android:id="@+id/event_Load_button"
            android:layout_width="19.6dp"
            android:layout_height="18.5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/event_button_start_margin"
            android:src="@drawable/vector_drawable_eventhistory"/>

        <TextView
            android:id="@+id/event_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/event_history_header_start_margin"
            android:layout_toRightOf="@+id/event_Load_button"
            android:fontFamily="Roboto-Regular"
            android:text="@string/event_history_event"
            android:textColor="@color/color_grey_white"
            android:textSize="@dimen/event_history_text_size"
        />

        <TextView
            android:id="@+id/event_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/event_history_header_start_margin"
            android:layout_toRightOf="@+id/event_history"
            android:background="@drawable/circular_tv"
            android:fontFamily="Roboto-Regular"
            android:gravity="center"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_grey_white"
            android:textSize="@dimen/event_count_text_size"
            android:visibility="invisible"
        />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/playback_frame"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/streaming_layout"
        android:layout_above="@+id/control_button_grid"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/event_promot_button_end_margin">
        <RelativeLayout
            android:id="@+id/subsc_expire_layout"
            android:layout_width="190dp"
            android:layout_height="145dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/subscription_close_bg"
            android:visibility="gone">

            <TextView
                android:id="@+id/expiry_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/expiry_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/expiry_info1"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/freetrial_plan_detail"
                android:textColor="@color/white"
                android:textSize="9sp"/>
            <Button
                android:id="@+id/upgrade_plan"
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:layout_below="@id/expiry_info2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/free_trial_button_background"
                android:backgroundTint="@color/subsc_button_blue"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/upgrade_plan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="11sp"/>
            <ImageView
                android:id="@+id/promot_subscription_button_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:padding="3dp"
                android:src="@drawable/close_expiry"/>

        </RelativeLayout>
        <ImageView
            android:id="@+id/promot_subscription_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:src="@drawable/vector_drawable_subscription"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/event_summary_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:src="@drawable/event_summary"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>
