<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nest_home_height"
    android:background="@color/help_text_gray">


    <ImageView
        android:id="@+id/nest_home_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:src="@drawable/nest_home" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nest_home_logo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nest_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/home_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/nest_home_status"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/indicator_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/path_white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"/>


</RelativeLayout>