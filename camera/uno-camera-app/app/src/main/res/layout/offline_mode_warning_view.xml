<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/offline_mode_warning_view_padding"
    android:background="@color/offline_mode_warning_view_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/offline_mode_warning_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/video_error"/>
        <TextView
            android:id="@+id/offline_mode_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="@string/you_are_viewing_in_offline_mode"
            android:layout_marginLeft="@dimen/offline_mode_warning_view_text_margin_left"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="@dimen/offline_mode_warning_view_text_size"/>
    </LinearLayout>
    <TextView
        android:id="@+id/offline_mode_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:text="@string/you_can_access_only_local_camera_until_better_wi_fi_connectivity_is_restored"
        android:textColor="@color/offline_mode_warning_view_desc_color"
        android:textSize="@dimen/offline_mode_warning_view_desc_size"/>

    <Button
        android:id="@+id/offline_mode_checknow_button"
        style="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_now"
        android:layout_marginTop="5dip"/>
</LinearLayout>