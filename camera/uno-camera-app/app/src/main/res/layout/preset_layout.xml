<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_preset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_layout_preset"
        android:clickable="true"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/preset_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/state_button_pressed_preset"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/preset_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/preset_1"
                android:background="@drawable/state_button_pressed_preset"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/preset_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/preset_2"
                android:background="@drawable/state_button_pressed_preset"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/preset_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/preset_3"
                android:background="@drawable/state_button_pressed_preset"
                android:gravity="center"
                android:text="4"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/preset_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/preset_4"
                android:background="@drawable/state_button_pressed_preset"
                android:gravity="center"
                android:text="5"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/move_center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/preset_5"
                android:background="@drawable/state_button_pressed_preset_blue"
                android:clickable="true"
                android:textSize="50sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@android:color/white"
                    android:clickable="false">

                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/holo_blue_light" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_centerVertical="true"
                        android:background="@android:color/holo_blue_light" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_preset_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/loading"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_des1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_preset"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/preset_description"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_des2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_des1"
        android:layout_marginLeft="15dp"
        android:text="@string/preset_des_2"
        android:textColor="@android:color/black" />

    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/tv_des2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_des2"
        android:background="@drawable/state_button_pressed_preset_blue"
        android:clickable="false"
        android:textSize="50sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@android:color/white"
            android:clickable="false">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@android:color/holo_blue_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:background="@android:color/holo_blue_light" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
