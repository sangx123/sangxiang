<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">


		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="30dp"
			android:src="@drawable/login_hubble_logo" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/account_almost_completed"
			android:textStyle="bold"
			android:layout_marginTop="30dp"
			android:textSize="20sp"
			android:textColor="@color/gray_2"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/last_step_create_account"
			android:textStyle="bold"
			android:layout_marginTop="10dp"
			android:textSize="16sp"
			android:textColor="@color/text_gray"/>

		<TextView
            android:id="@+id/email_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/emailed_verification_code"
            android:textAlignment="center"
			android:layout_marginTop="30dp"
			android:textSize="14sp"
			android:textColor="@color/text_gray"/>

		<TextView
			android:id="@+id/user_email_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/test_email"
			android:textStyle="bold"
			android:layout_marginTop="5dp"
			android:textSize="14sp"
			android:textColor="@color/text_gray"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
		    android:orientation="horizontal"
			android:gravity="center"
			android:layout_marginTop="20dp"
			android:id="@+id/change_email_linearlayout">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/change_email"
				android:layout_marginRight="5dp"/>

			<TextView
				android:id="@+id/change_email"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="@string/change_email"
				android:layout_marginTop="5dp"
				android:textSize="14sp"
				android:textColor="@color/text_blue"/>

		</LinearLayout>

		<TextView
			android:id="@+id/verification_code_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dp"
			android:layout_gravity="left"
			android:text="@string/enter_verification_code"
			android:layout_marginTop="20dp"
			android:textSize="14sp"
			android:textColor="@color/text_gray"/>

		<EditText
			android:id="@+id/enter_verification_code_et"
			android:layout_width="match_parent"
			android:layout_height="42dp"
			android:layout_marginLeft="30dp"
			android:layout_marginRight="30dp"
			android:layout_marginTop="5dp"
			android:inputType="number"
			android:singleLine="true"
			android:maxLength="14"
			android:gravity="left"
			android:hint="@string/code_eg"
			android:textColor="@color/text_gray"
			android:textSize="16sp" />

		<Button
			android:id="@+id/verify_button"
			android:layout_width="match_parent"
			android:layout_height="42dp"
			android:layout_marginLeft="30dp"
			android:layout_marginRight="30dp"
			android:layout_marginTop="20dp"
			android:background="@drawable/vector_drawable_login_button"
			android:gravity="center"
			android:text="@string/verify"
			android:textColor="#ffffff"
			android:textSize="16sp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dp"
			android:layout_marginRight="30dp"
			android:text="@string/not_received_code"
			android:layout_marginTop="30dp"
			android:textSize="14sp"
			android:textColor="@color/text_gray"
			android:gravity="center"/>

		<TextView
			android:id="@+id/resend_verification_code_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dp"
			android:layout_marginRight="30dp"
			android:text="@string/resend_verification_code"
			android:layout_marginTop="10dp"
			android:textSize="14sp"
			android:textColor="@color/text_blue"
			android:textStyle="bold"
			android:gravity="center"/>



	</LinearLayout>
</LinearLayout>
