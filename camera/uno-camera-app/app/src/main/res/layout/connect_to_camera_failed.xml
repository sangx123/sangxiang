<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  android:id="@+id/root_view"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:keepScreenOn="true"
  android:orientation="vertical">

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:src="@drawable/blur_default"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_light_white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
      android:id="@+id/my_singlecam_toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/colorPrimary"
      android:minHeight="?attr/actionBarSize"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
      app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="vertical">

      <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="3"/>

      <ImageView
        android:id="@+id/imgConnecting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/setup_failed_camera"/>

      <TextView
        android:id="@+id/txtConnecting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/unable_to_connect"
        android:textColor="@color/registration_text"
        android:textSize="18sp"
        android:textStyle="bold"/>

      <!--<TextView
          android:id="@+id/connectToCameraFailed_txtDescription"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="25dp"
          android:layout_marginRight="25dp"
          android:layout_marginTop="10dp"
          android:gravity="center"
          android:textColor="@color/registration_text"/>-->

      <TextView
        android:id="@+id/connectToCameraFailed_txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:text="@string/setup_camera_failed_tip"
        android:textColor="@color/registration_text"/>

      <TextView
        android:id="@+id/txt_udid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="left"
        android:textColor="@color/registration_text"
        android:textSize="14sp"/>

      <TextView
        android:id="@+id/txt_firmware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="left"
        android:textColor="@color/registration_text"
        android:textSize="14sp"/>

      <TextView
        android:id="@+id/txt_current_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="left"
        android:textColor="@color/registration_text"
        android:textSize="14sp"/>

      <TextView
        android:id="@+id/txt_error_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="left"
        android:textColor="@color/registration_text"
        android:textSize="14sp"/>

      <!--<TextView
        android:id="@+id/txt_setup_camera_failed_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="@string/setup_camera_failed_tip"
        android:textColor="@color/bright_blue"
        android:textSize="14sp"/>-->

      <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="3"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="2px"
      android:background="@color/bright_blue"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <Button
        android:id="@+id/cameraSetupFailed_btn_help"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/transparent_light_white"
        android:text="@string/help"
        android:textColor="@color/bright_green"/>

      <Button
        android:id="@+id/cameraSetupFailed_btn_connect"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/transparent_light_white"
        android:text="@string/retry"
        android:textColor="@color/bright_blue"/>
    </LinearLayout>
  </LinearLayout>

</FrameLayout>