<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transperent_color">

    <ImageView
        android:id="@+id/close_music"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:padding="2dp"
        android:src="@drawable/close"/>

    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous_img"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/previous" />

        <ImageView
            android:id="@+id/play_img"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/play" />

        <ImageView
            android:id="@+id/pause_img"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/pause"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/next_img"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/next" />

        <ImageView
            android:id="@+id/playlist_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/next_img"
            android:src="@drawable/playlist" />

    </LinearLayout>

    <TextView
        android:id="@+id/track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/controls"
        android:layout_marginBottom="15dp"
        android:fontFamily="Roboto-Regular"
        android:textColor="@color/white"
        android:textSize="10sp" />


    <LinearLayout
        android:id="@+id/seekbar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/controls"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        
        <ImageView
            android:layout_width="12dp"
            android:layout_height="11.5dp"
            android:src="@drawable/volume"
            android:layout_marginTop="5dp"/>

        <SeekBar
            android:id="@+id/volume_seekbar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:thumbTint="@color/white"
            android:progressTint="@color/viewfinder_marine_bg" />

    </LinearLayout>


</RelativeLayout>


