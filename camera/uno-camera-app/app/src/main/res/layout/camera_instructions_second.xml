<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_light_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/abc_action_button_min_height_material">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

      <ImageView
          android:id="@+id/imgCamThree"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/camera_instruction_animation"
          android:scaleType="centerInside"/>

      <TextView
          android:id="@+id/txtCamOne"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="26dp"
          android:text="@string/enable_pairing_mode"
          android:textColor="@color/registration_text"
          android:textSize="19sp"
          android:textStyle="bold"/>

      <TextView
          android:id="@+id/cameraInstruction_pressPairButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:padding="10dp"
          android:text="@string/camera_pair_instructions"
          android:textColor="@color/registration_text"
          android:textSize="16sp"/>
    </LinearLayout>
  </ScrollView>

</LinearLayout>