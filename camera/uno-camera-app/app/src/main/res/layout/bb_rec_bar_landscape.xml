<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:background="@color/black_trans">

  <LinearLayout
      android:id="@+id/switchGrp"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:orientation="horizontal">

    <com.hubble.ui.VerticalSeekBar
        android:id="@+id/seekBar1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/vid_snap_vertical_bg"
        android:max="1"
        android:progress="0"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/bb_vid_snap_knob"
        android:thumbOffset="0dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

      <ImageButton
          android:id="@+id/imageRec"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="5dp"
          android:background="@android:color/transparent"
          android:scaleType="centerInside"
          android:src="@drawable/bb_rec_icon_d"/>

      <ImageButton
          android:id="@+id/imageSnap"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:background="@android:color/transparent"
          android:scaleType="centerInside"
          android:src="@drawable/bb_snap_icon"/>

    </LinearLayout>
  </LinearLayout>


  <RelativeLayout
      android:id="@+id/directionLayout"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_centerVertical="true"
      >
    <ImageView
        android:id="@+id/directionPad"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/circle_buttons1_2"/>

  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/btnLayout"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true">

    <ImageButton
        android:id="@+id/btnImg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/bb_snap_btn"/>
  </RelativeLayout>

</RelativeLayout>