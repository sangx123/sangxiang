<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nest_dashboard_height"
    android:background="@color/next_text_bg">


    <TextView
        android:id="@+id/product_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:drawableTop="@drawable/nest_dashboard_smoke_detector"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:textColor="@color/text_blue"
        android:textSize="13sp" />


   <!-- <TextView
        android:id="@+id/add_to_dashboard_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="27dp"
        android:text="@string/add_to_dashboard"
        android:textColor="@color/nest_getstared_bg"
        android:textSize="15sp" />-->

    <TextView
        android:id="@+id/rule_settings"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:text="@string/rule_settings"
        android:layout_alignParentRight="true"
        android:background="@color/text_blue"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginRight="30dp"

         />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"/>

</RelativeLayout>