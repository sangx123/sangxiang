<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:gravity="center_horizontal">



  <ScrollView
      android:id="@+id/setup_sensor__layoutview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

      <ImageView
          android:id="@+id/error_tag_sensor_image"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:layout_marginTop="50dp"
          android:src="@drawable/sensor_error_icon"/>


      <TextView
          android:id="@+id/error_sensor_main_title"

          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:gravity="center"
          android:layout_marginTop="20dp"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"

          android:text="@string/press_button_seconds"
          android:fontFamily="Roboto-bold"
          android:textColor="#36b1e5"
          android:textSize="16sp"
          android:textStyle="bold"/>

      <TextView
          android:id="@+id/error_sensor_sub_title"

          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:layout_marginTop="20dp"
          android:text="@string/press_button_seconds"
          android:fontFamily="Roboto-Regular"
          android:textColor="#36b1e5"
          android:textSize="14sp"/>




        <Button
            android:id="@+id/error_sensor_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"

            android:text="@string/retry_cap"
            android:fontFamily="Roboto-Regular"
            android:textSize="18sp"
            android:textColor="#36b1e5"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>
  </ScrollView>
</FrameLayout>