<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/no_motion_summary_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black">
	<RelativeLayout
		android:id="@+id/no_motion_summary_layout"
		android:layout_width="170dp"
		android:layout_height="90dp"
		android:layout_marginLeft="20dp">
		<TextView
			android:id="@+id/no_motion_summary_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginBottom="10dp"
			android:layout_marginTop="15dp"
			android:fontFamily="HelveticaNeue-Medium"
			android:textColor="@color/white"
			android:textSize="13sp"/>
		<TextView
			android:id="@+id/no_motion_summary_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="15dp"
			android:fontFamily="HelveticaNeue-Medium"
			android:text="@string/no_summary_video"
			android:textAllCaps="true"
			android:textColor="@color/color_golden_yellow"
			android:textSize="12sp"/>
		<ImageView
			android:id="@+id/no_motion_summary_info"
			android:layout_width="17dp"
			android:layout_height="17dp"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="15dp"
			android:layout_marginLeft="5dp"
			android:layout_toRightOf="@id/no_motion_summary_text"
			android:scaleType="fitXY"
			android:src="@drawable/no_summary_info"/>

	</RelativeLayout>
	<View
		android:id="@id/divider"
		android:layout_width="2dp"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/no_motion_summary_layout"
		android:layout_alignTop="@id/no_motion_summary_layout"
		android:layout_marginBottom="15dp"
		android:layout_marginTop="15dp"
		android:layout_toRightOf="@id/no_motion_summary_layout"
		android:background="@color/white"/>
	<LinearLayout
		android:id="@+id/summary_info_layout"
		android:layout_width="fill_parent"
		android:layout_height="69dp"
		android:layout_alignTop="@id/no_motion_summary_layout"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="15dp"
		android:layout_toRightOf="@id/divider"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/no_motion_summary_sound"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<ImageView
				android:layout_width="13dp"
				android:layout_height="13dp"
				android:scaleType="fitXY"
				android:src="@drawable/event_summary_sound"/>
			<TextView
				android:id="@+id/no_motion_summary_sound_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:fontFamily="HelveticaNeue-Light"
				android:textColor="@color/white"
				android:textSize="10sp"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/no_motion_summary_temp"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<ImageView
				android:layout_width="8dp"
				android:layout_height="13dp"
				android:scaleType="fitXY"
				android:src="@drawable/event_summary_temp"/>
			<TextView
				android:id="@+id/no_motion_summary_temp_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:fontFamily="HelveticaNeue-Light"
				android:textColor="@color/white"
				android:textSize="10sp"/>
		</LinearLayout>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/white"
	    android:layout_alignParentBottom="true"/>
</RelativeLayout>