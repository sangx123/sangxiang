<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical">


	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="50dp"
		android:src="@drawable/login_hubble_logo" />

	<TextView
		android:id="@+id/change_email_id_tv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginTop="50dp"
		android:gravity="center"
		android:text="@string/change_email_id"
		android:textColor="@color/text_gray"
		android:textSize="18sp"
		 />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginTop="60dp"
		android:weightSum="1"
		android:orientation="horizontal">
		<EditText
			android:id="@+id/login_et"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:background="@null"
			android:drawableLeft="@drawable/vector_drawable_email"
			android:drawablePadding="8dp"
			android:hint="@string/new_email"
			android:inputType="textEmailAddress"
			android:singleLine="true"
			android:paddingTop="10dp"
			android:textColor="@color/main_blue"
			android:textColorHint="@color/hint_text"
			android:textSize="14sp" />

		<ImageView
			android:id="@+id/validemail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/vector_drawable_success"
			android:visibility="gone"/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:background="#C4C4C4" />

	<TextView
		android:id="@+id/email_error_tv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginTop="4dp"
		android:text="@string/email_warning_message"
		android:textColor="@color/text_error"
		android:textSize="12sp"
		android:visibility="invisible" />


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginTop="30dp"
		android:orientation="horizontal">

		<EditText
			android:id="@+id/login_password_et"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@null"
			android:drawableLeft="@drawable/vector_drawable_password"
			android:drawablePadding="8dp"
			android:gravity="center_vertical"
			android:hint="@string/hubble_password"
			android:inputType="textPassword"
			android:singleLine="true"
			android:textColor="@color/main_blue"
			android:textColorHint="@color/hint_text"
			android:textSize="14sp" />

		<TextView
			android:id="@+id/showpassword_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:text="@string/show"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:textColor="@color/main_blue"
			android:textSize="14sp" />

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:background="#C4C4C4" />

	<TextView
		android:id="@+id/tv_password_error"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginTop="4dp"
		android:text="@string/password_warning_message"
		android:textColor="@color/text_error"
		android:textSize="12sp"
		android:visibility="invisible" />

	<Button
		android:id="@+id/change_email_button"
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginTop="30dp"
		android:background="@drawable/vector_drawable_loginbutton"
		android:gravity="center"
		android:text="@string/change"
		android:textColor="@color/white"
		android:textSize="16sp" />



</LinearLayout>