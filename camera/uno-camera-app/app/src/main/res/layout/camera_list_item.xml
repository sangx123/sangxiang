<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/camera_list_item_frame_holder"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_columnSpan="1"
	android:layout_marginBottom="5dp"
	android:background="@color/white">
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"

		>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingBottom="10dp">

		<RelativeLayout
			android:id="@+id/toplayer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical">


			<TextView
				android:id="@+id/textViewCameraName"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_margin="5dp"
				android:layout_weight="0.3"
				android:background="@android:color/transparent"

				android:fontFamily="Roboto-Bold"
				android:gravity="bottom"

				android:maxLines="1"
				android:maxWidth="100dp"
				android:minWidth="100dp"

				android:singleLine="true"
				android:text="Orbit"
				android:textColor="@color/color_blue"
				android:textSize="15sp"/>

			<com.nxcomm.blinkhd.ui.customview.CameraStatusView
				android:id="@+id/list_row_camera_ImageView_CameraStatus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="7dp"
				android:layout_toRightOf="@id/textViewCameraName"
				android:padding="1dp"/>


			<LinearLayout
				android:id="@+id/battery_status_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginRight="5dp"
				android:layout_toRightOf="@id/list_row_camera_ImageView_CameraStatus"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/battery_image"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="3dp"
					android:src="@drawable/vector_drawable_battery_half"/>

				<TextView
					android:id="@+id/battery_status"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="50%"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/sdcard_status_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_toRightOf="@+id/battery_status_layout"
				android:orientation="vertical"
				android:visibility="gone">

				<ImageView
					android:id="@+id/sdcard_image"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginLeft="3dp"
					android:src="@drawable/s_dcard"/>

				<TextView
					android:id="@+id/sdcard_space_tv"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="8sp"
					android:text="@string/orbit_free_storage"/>
			</LinearLayout>



			<ImageButton
				android:id="@+id/list_row_camera_setting_camSettingBtn"
				android:layout_width="30dp"
				android:layout_height="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
				android:layout_alignParentRight="true"
				android:layout_margin="10dp"
				android:background="@android:color/transparent"
				android:contentDescription="@string/device_settings"
				android:scaleType="centerCrop"
				android:src="@drawable/vector_drawable_setting_list"/>



		</RelativeLayout>

		<LinearLayout
			android:id="@+id/ll_imageCamera"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"

			android:orientation="horizontal">
<LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft="10dp"
	android:orientation="vertical">
	<RelativeLayout
		android:layout_width="100dp"
		android:layout_height="100dp"
		>
		<ImageView
			android:id="@+id/list_row_camera_setting_imageCamera"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="5dp"

			android:src="@drawable/default_cam"

			/>

		<View
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignLeft="@+id/list_row_camera_setting_imageCamera"
			android:layout_alignTop="@+id/list_row_camera_setting_imageCamera"
			android:layout_margin="00dp"
			android:background="@drawable/rounded_edges"/>
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/notifylayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"

		android:gravity="center_vertical"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"

			android:src="@drawable/in_privacy"
			/>

		<android.support.v7.widget.SwitchCompat
			android:id="@+id/camera_on_off_switch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="5dp"
			android:checked="true"
			app:theme="@style/SwitchCompact_color"
			/>

		<ImageView
			android:layout_width="22dp"
			android:layout_height="14dp"
			android:layout_gravity="center_vertical"

			android:src="@drawable/privacyoff"
			/>
	</LinearLayout>

</LinearLayout>

			<LinearLayout
				android:id="@+id/ll_motionLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:orientation="vertical"
				>

				<LinearLayout
					android:id="@+id/ll_humidity_and_temparature"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:layout_margin="10dp"

					android:orientation="horizontal">

					<LinearLayout
						android:id="@+id/humidity_layout"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
						android:orientation="horizontal">


						<ImageView
							android:id="@+id/humidity_image"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="bottom"
							android:layout_marginLeft="3dp"
							android:paddingBottom="2dp"
							android:src="@drawable/humidity"/>

						<TextView
							android:id="@+id/humidity"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:fontFamily="Roboto-Light"
							android:layout_gravity="bottom"
							android:text="---"
							android:layout_marginLeft="3dp"
							android:textColor="@color/text_gray"
							android:textSize="10sp"/>

						<TextView
							android:id="@+id/divider"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="bottom"
							android:layout_marginLeft="5dp"
							android:text="|"
							android:textColor="#979797"/>

					</LinearLayout>

					<LinearLayout
						android:id="@+id/temperature_layout"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:orientation="horizontal">

						<ImageView
							android:id="@+id/temperature_image"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="2dp"
							android:layout_gravity="bottom"
							android:layout_marginLeft="5dp"
							android:src="@drawable/temperature"/>

						<TextView
							android:id="@+id/temperature"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:fontFamily="Roboto-Light"
							android:layout_gravity="bottom"
							android:layout_marginLeft="3dp"
							android:text="---"
							android:textColor="@color/text_gray"
							android:textSize="10sp"/>
					</LinearLayout>

				</LinearLayout>

				<TextView
					android:id="@+id/dashboard_event_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:ellipsize="end"
					android:fontFamily="Roboto-Medium"
					android:gravity="center"
					android:maxLines="2"
					android:text="@string/movement_detection_text"
					android:textColor="@color/text_blue"
					android:textSize="16sp"
					/>

				<TextView
					android:id="@+id/dashboard_event_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:ellipsize="end"
					android:fontFamily="Roboto-Regular"
					android:gravity="center"
					android:maxLines="2"
					android:textColor="@color/help_text_gray"
					android:textSize="12sp"
					/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom|right">

                    <ImageButton
                        android:id="@+id/list_row_camera_setting_btaButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@id/list_row_camera_setting_camSettingBtn"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/device_settings"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:src="@drawable/baby_bta"/>

                </LinearLayout>
				<LinearLayout
					android:id="@+id/focustaglayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:layout_marginTop="10dp"
                    android:visibility="gone"
					android:orientation="horizontal">


					<RelativeLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical">

						<RelativeLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
						>
							<LinearLayout
								android:id="@+id/focustagaddlyt"
								android:layout_width="wrap_content"
								android:layout_alignParentRight="true"
								android:layout_height="wrap_content">
						<LinearLayout
							android:id="@+id/focustagadd"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="vertical"

							android:layout_marginRight="5dp"

							android:layout_alignParentRight="true"
							>

							<ImageView
								android:id="@+id/addtag"
								android:layout_width="32dp"
								android:layout_height="32dp"
								android:layout_alignParentTop="true"
								android:layout_gravity="center"
								android:src="@drawable/focus_tag_add"

								/>

						</LinearLayout>
							</LinearLayout>
							<LinearLayout
								android:id="@+id/focustagadded1"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_toLeftOf="@id/focustagaddlyt"
								android:layout_marginRight="10dp"
								android:orientation="horizontal"
								android:visibility="gone"
								>

								<TextView
									android:id="@+id/focustagName1"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"

									android:gravity= "center"
									android:background="@drawable/tag_purple"

										android:textAllCaps="true"
									android:fontFamily="Roboto-Regular"
									android:textSize="12sp"
									android:textColor="#ffffff"/>

								<View
									android:layout_width="1dp"
									android:layout_height="match_parent"
									android:background="#979797"
									android:layout_marginLeft="10dp"
									android:layout_marginRight="10dp"
									android:visibility="gone"
									/>
							</LinearLayout>

							<LinearLayout
								android:id="@+id/focustagadded2"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_toLeftOf="@id/focustagadded1"
								android:layout_marginRight="10dp"
								android:orientation="horizontal"
								android:visibility="gone">

									<TextView
										android:id="@+id/focustagName2"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:background="@drawable/tag_green"
										android:gravity="center"
										android:text="test"
											android:textAllCaps="true"
										android:fontFamily="Roboto-Regular"
										android:textSize="12sp"
										android:textColor="#ffffff"/>

								<View
									android:layout_width="1dp"
									android:layout_height="match_parent"
									android:background="#979797"
									android:layout_marginLeft="10dp"
									android:layout_marginRight="10dp"
									android:visibility="gone"
									/>
							</LinearLayout>
							<LinearLayout
								android:id="@+id/focustagadded3"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_toLeftOf="@id/focustagadded2"
								android:layout_marginRight="10dp"
								android:orientation="horizontal"
								android:visibility="gone">
									<TextView
										android:id="@+id/focustagName3"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
									    android:background="@drawable/tag_brown"
										android:gravity="center"
										android:text="test"
										android:textAllCaps="true"
										android:fontFamily="Roboto-Regular"
										android:textSize="12sp"
										android:textColor="#ffffff"/>
								<View
									android:layout_width="1dp"
									android:layout_height="match_parent"
									android:background="#979797"
									android:layout_marginLeft="10dp"
									android:layout_marginRight="10dp"
									android:visibility="gone"
									/>
							</LinearLayout>

						</RelativeLayout>
					</RelativeLayout>

				</LinearLayout>
			</LinearLayout>
		</LinearLayout>



	</LinearLayout>

		<RelativeLayout
			android:id="@+id/privacy_mode"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#F2FFFFFF"

			android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/blue_arrow"
                android:padding="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >

                <TextView
                    android:id="@+id/privacycameraname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Roboto-Bold"
                    android:text="Text"
                    android:textSize="14sp"
                    android:textColor="@color/text_blue"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="15sp"
                    android:textColor="@color/text_blue"
                    android:text="@string/viewfinder_notification_off_text"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"/>


			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"

				android:background="@drawable/rectangle"

				android:orientation="horizontal">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_margin="10dp"
					android:src="@drawable/in_privacy"
					/>

				<android.support.v7.widget.SwitchCompat
					android:id="@+id/privacy_switch"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_margin="10dp"
					android:checked="false"
					app:theme="@style/SwitchCompact_color"
					/>

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_margin="10dp"
					android:src="@drawable/not_in_privacy"
					/>

			</LinearLayout>
            </LinearLayout>

		</RelativeLayout>

	</FrameLayout>


</LinearLayout>