<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/nest_getstared_bg">

	<ImageView
		android:id="@+id/nest_logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="@dimen/nest_logo_top_margin"
		android:src="@drawable/work_with_nest_logo"/>

	<LinearLayout
		android:id="@+id/thermostat_logo"
		android:layout_width="match_parent"
		android:layout_height="124dp"
		android:layout_below="@id/nest_logo"
		android:layout_marginTop="40dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_weight="1"
			android:src="@drawable/nest_airwave"/>

		<View
			android:layout_width="1dp"
			android:layout_height="124dp"
		    android:background="@color/hint_text"/>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true" android:layout_weight="1"

			android:src="@drawable/nest_icon"/>
	</LinearLayout>


	<TextView
		android:id="@+id/description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/thermostat_logo"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="@dimen/settingsSidePadding"
		android:layout_marginLeft="@dimen/settingsSidePadding"
		android:layout_marginRight="@dimen/settingsSidePadding"
		android:gravity="center"
		android:text="@string/nest_get_started"
		android:textColor="@color/white"
		android:textStyle="normal"
		android:fontFamily="sans-serif"
		android:textSize="21sp"/>

	<ImageView
		android:id="@+id/hubble_logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="17dp"
		android:src="@drawable/hubble_logo_white"/>
	<Button
		android:id="@+id/get_started"
		android:layout_width="@dimen/get_started_button_size"
		android:layout_height="@dimen/get_started_button_size"
		android:layout_above="@id/hubble_logo"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="18dp"
		android:background="@drawable/get_started"/>

</RelativeLayout>