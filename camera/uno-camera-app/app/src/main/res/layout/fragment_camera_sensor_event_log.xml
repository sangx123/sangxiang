<FrameLayout
    android:id="@+id/video_view_fragment_holder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_1">
        <Spinner
            android:id="@+id/events_dropdown_spinner"
            style="@android:style/Widget.DeviceDefault.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:popupBackground="@color/white"
            android:dropDownSelector="@color/white"
            android:dropDownWidth="250dp"
            />

        <FrameLayout
            android:id="@+id/camera_sensor_event_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/events_dropdown_spinner" />
    </RelativeLayout>

</FrameLayout>