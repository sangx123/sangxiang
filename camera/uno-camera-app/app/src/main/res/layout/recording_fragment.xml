<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutRecording"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewfinder_primary_bg"
    android:orientation="horizontal">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/ivTrigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/capture"/>

    <TextView
        android:id="@+id/tvRecordingState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/viewfinder_capture"
        android:textColor="@color/white"
        android:textSize="12sp"/>
 </LinearLayout>

  <ImageView
      android:id="@+id/ivMode"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top|right"
      android:visibility="gone"
      android:src="@drawable/camera_action_video_s"/>

  <ImageView
      android:id="@+id/ivStorage"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_gravity="top|left"
      android:src="@drawable/phone_storage"
      android:visibility="gone"/>

  <ProgressBar
      android:id="@+id/progressBarStorage"
      style="?android:attr/progressBarStyleSmall"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_gravity="left|top"
      android:visibility="gone"/>
</LinearLayout>