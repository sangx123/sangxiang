<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/viewfinder_music_text"
        android:gravity="center"
        android:text="@string/viewfinder_playlist"
        android:textSize="18sp"
        android:layout_weight="1"
        android:fontFamily="Roboto-Medium"
       />
        <ImageView
            android:id="@+id/close_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:src="@drawable/close_playlist"/>


    </LinearLayout>
    <View
        android:id="@+id/partition"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_blue"
        android:layout_below="@id/title"/>

    <ListView
        android:id="@+id/playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/partition"
        android:divider="@color/medium_grey"
        android:dividerHeight="1dp"/>

</RelativeLayout>