<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFEBEBEB">

	<RelativeLayout
		android:id="@+id/menu_layout"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_alignParentTop="true"
		android:visibility="gone">

		<TextView
			android:id="@+id/cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="20dp"
			android:fontFamily="HelveticaNeue-Medium"
			android:text="@string/dialog_cancel"
			android:textColor="@color/text_blue"
			android:textSize="14sp"
		/>

		<ImageView
			android:id="@+id/share_enable_image"
			android:layout_width="18dp"
			android:layout_height="21dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="20dp"
			android:scaleType="fitXY"
			android:src="@drawable/share_enabled"/>


		<ImageView
			android:id="@+id/delete_enable_image"
			android:layout_width="18dp"
			android:layout_height="21dp"
			android:layout_centerVertical="true"
			android:layout_marginRight="30dp"
			android:layout_toLeftOf="@id/share_enable_image"
			android:src="@drawable/delete_enabled"/>

		<TextView
			android:id="@+id/select_all"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginRight="30dp"
			android:layout_toLeftOf="@id/delete_enable_image"
			android:fontFamily="HelveticaNeue-Medium"
			android:text="@string/select_all"
			android:textColor="@color/text_blue"
			android:textSize="14sp"
			android:visibility="invisible"/>
		<TextView
			android:id="@+id/deselect_all"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginRight="30dp"
			android:layout_toLeftOf="@id/delete_enable_image"
			android:fontFamily="HelveticaNeue-Medium"
			android:text="@string/deselect_all"
			android:textColor="@color/text_blue"
			android:textSize="14sp"
			android:visibility="invisible"/>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_alignParentBottom="true"
			android:background="@color/text_dark_gray"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/no_data_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="invisible">

		<ImageView
			android:id="@+id/no_data_image"
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="130dp"
			android:src="@drawable/emptygallery"/>
		<TextView
			android:id="@+id/no_data_text1"
			android:layout_width="305dp"
			android:layout_height="wrap_content"
			android:layout_below="@id/no_data_image"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="30dp"
			android:fontFamily="Roboto-Regular"
			android:gravity="center"
			android:text="@string/no_data_gallery_text"
			android:textColor="@color/text_dark_gray"
			android:textSize="18sp"
		/>
		<TextView
			android:id="@+id/no_data_text2"
			android:layout_width="305dp"
			android:layout_height="wrap_content"
			android:layout_below="@id/no_data_text1"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="20dp"
			android:fontFamily="Roboto-Regular"
			android:gravity="center"
			android:text="@string/no_data_gallery_info"
			android:textColor="@color/text_gray"
			android:textSize="14sp"
		/>

	</RelativeLayout>

	<GridView
		android:id="@+id/gallery_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/menu_layout"
		android:layout_margin="10dp"
		android:columnWidth="160dp"
		android:gravity="center"
		android:horizontalSpacing="10dp"
		android:numColumns="auto_fit"
		android:stretchMode="columnWidth"
		android:verticalSpacing="10dp"
	/>

	<ProgressBar
		android:id="@+id/gallery_progressBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:background="#FFEBEBEB"
		android:indeterminateTint="@color/color_text_blue"
		android:indeterminateTintMode="src_in"
		android:visibility="gone"/>

</RelativeLayout>
