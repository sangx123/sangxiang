<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:background="@color/color_text_blue"
		android:gravity="center_vertical"
		>
		<ImageView android:id="@+id/settings_back"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:padding="10dp"
		           android:layout_alignParentLeft="true"
		           android:src="@drawable/back"
		/>
		<TextView android:id="@+id/settingsHeader"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:padding="10dp"
		          android:text="@string/settings"
		          android:textColor="@color/white"
		          android:layout_toRightOf="@+id/settings_back"
		          android:textSize="18sp"
                  android:fontFamily="Roboto-Regular"
		         />

        <TextView
            android:id="@+id/settingsHeaderCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:maxLines="1"
            android:maxLength="15"
            android:text="@string/settings"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/settingsHeader"
            android:textSize="12sp"
            android:fontFamily="Roboto-Regular"/>

		<ImageView android:id="@+id/delete_camera"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:padding="10dp"
		           android:layout_gravity="right"
		           android:layout_alignParentRight="true"
		           android:src="@drawable/ic_delete_white_48dp"
			/>
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/ll_street_camera"
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:gravity="center_vertical"
		android:background="@color/app_highlight_color"
		android:orientation="horizontal"
        android:visibility="gone">
		<TextView
			android:id="@+id/txtStreetCamera"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="44dp"
			android:layout_weight="1"
			android:text="@string/street_camera2"
			android:textColor="@color/color_text_blue"
			android:textSize="18sp"/>
		<android.support.v7.widget.SwitchCompat
			android:id="@+id/street_camera_switch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:checked="true"
			android:layout_margin="5dp"
			app:theme="@style/SwitchCompact_color" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/ll_camera_details"
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/txtCameraDetails"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="44dp"
			android:layout_weight="1"
			android:text="@string/debug_camera_details"
			android:textColor="@color/color_text_blue"
			android:textSize="18sp"/>
		<ImageView
			android:id="@+id/imgCameraDetails"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="30dp"
			android:src="@drawable/path_blue"
		/>
	</LinearLayout>
	<View android:layout_width="match_parent"
	      android:layout_height="1dp"
	      android:layout_marginLeft="44dp"
	      android:background="@color/drawer_list_divider"/>


	<LinearLayout
		android:id="@+id/ll_camera_settings"
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/txtCameraSettings"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="44dp"
			android:layout_weight="1"
			android:text="@string/camera_settings"
			android:textColor="@color/color_text_blue"
			android:textSize="18sp"/>
		<ImageView
			android:id="@+id/imgCameraSettings"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="30dp"
			android:src="@drawable/path_blue"
		/>
	</LinearLayout>
	<View android:layout_width="match_parent"
	      android:layout_height="1dp"
	      android:layout_marginLeft="44dp"
	      android:background="@color/drawer_list_divider"/>
	<LinearLayout
		android:id="@+id/ll_general_settings"
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/txtGeneralSettings"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="44dp"
			android:layout_weight="1"
			android:text="@string/general_setting"
			android:textColor="@color/color_text_blue"
			android:textSize="18sp"/>
		<ImageView
			android:id="@+id/imgGeneralSettings"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="30dp"
			android:src="@drawable/path_blue"
		/>
	</LinearLayout>
	<View android:layout_width="match_parent"
	      android:layout_height="1dp"
	      android:layout_marginLeft="44dp"
	      android:background="@color/drawer_list_divider"/>


</LinearLayout>