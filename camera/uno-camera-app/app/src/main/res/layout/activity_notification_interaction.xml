<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

  <ImageView
      android:id="@+id/notificationInteraction_imageVew"
      android:layout_width="@dimen/motion_event_image_width"
      android:layout_height="@dimen/motion_event_image_height"
      android:scaleType="centerCrop"
      android:src="@drawable/notificationnteraction_defaultimage"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="3"
      android:gravity="center"
      android:orientation="vertical">

    <TextView
        android:id="@+id/notificationInteraction_eventText"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/motion_detection_on_blank_camera"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <Button
          android:id="@+id/notificationInteraction_playButton"
          style="?android:attr/buttonBarButtonStyle"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:enabled="true"
          android:text="@string/play_event"
          android:textColor="@color/material_deep_teal_500"
          android:visibility="gone"/>

      <Button
          android:id="@+id/notificationInteraction_ignoreButton"
          style="?android:attr/buttonBarButtonStyle"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="@string/ignore"
          android:textColor="@color/material_deep_teal_500"/>

      <Button
          android:id="@+id/notificationInteraction_cameraButton"
          style="?android:attr/buttonBarButtonStyle"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="@string/go_to_camera"
          android:textColor="@color/material_deep_teal_500"/>

    </LinearLayout>

  </LinearLayout>

</LinearLayout>