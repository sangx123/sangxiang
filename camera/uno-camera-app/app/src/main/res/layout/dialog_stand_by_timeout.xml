<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_dialog_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_stand_by_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:src="@drawable/camera_sleep"
        android:background="@color/camera_sleep_background"/>

    <TextView
        android:id="@+id/dialog_stand_by_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/camera_entering_stand_by_mode"
        android:textColor="@color/white"
        android:background="@color/camera_sleep_background"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:padding="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_timeout_btn_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/close"
            android:textColor="@color/my_holo_blue_light"
            android:textSize="18sp"
           />

        <Button
            android:id="@+id/dialog_timeout_btn_ok"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/OK"
            android:textColor="@color/my_holo_blue_light"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>