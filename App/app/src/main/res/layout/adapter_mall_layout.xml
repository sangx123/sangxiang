<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    >
    <ImageView
        android:id="@+id/mGoodsImg"
        android:layout_width="169dp"
        android:scaleType="fitXY"
        android:layout_height="180dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mGoodsName"
        android:textSize="14sp"
        android:textColor="#000"
        />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#ef426f"
            android:id="@+id/mGoodsPriceMoney"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#ef426f"
            android:id="@+id/mGoodsPricePlus"
            android:text="+"
            />
        <LinearLayout
            android:gravity="center"
            android:id="@+id/mXinbiPriceLayout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_mall_xinbi_yellow"
                />
            <TextView
                android:id="@+id/mGoodsPriceXinbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17sp"
                android:textColor="#fc7031"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/mGoodsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:textSize="12sp"
        />


</LinearLayout>